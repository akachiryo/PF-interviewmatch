<div class="user-edit">
  <div class="user-edit-main card">
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name, "ニックネーム", class:"mt-5" %>
        <%= f.text_field :name, class:"form-control", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス", class:"mt-3" %>
        <%= f.text_field :email, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "プロフィール画像", class:"mt-3" %><br>
        <%= f.file_field :image, class:"" %>
      </div>

      <div class="form-group user-introduction">
        <%= f.label :introduction, "自己紹介", class:"mt-3" %>
        <%= f.text_area :introduction, class:"form-control", rows: "10" %>
      </div>
      <div class="user-edit-btn text-center mb-3">
        <%= f.submit "編集内容を保存", class: "btn btn-success mt-3  me-5" %>
        <%= link_to "退会する",  unsubscribe_path, class: "btn btn-danger mt-3 ms-5" %>
      </div>

    <% end %>
  </div>
</div>
