<h2>会員情報編集</h2>
<%= form_with model: @user, local: true do |f| %>
  <div class="form-inline">
    <%= f.label :name, "ニックネーム", class:"col-1 mt-5" %>
    <%= f.text_field :name, class:"offset-1 col-3", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス", class:"col-1 mt-3" %>
    <%= f.text_field :email, class:"offset-1 col-3" %>
  </div>

  <div class="form-group">
    <%= f.label :image, class:"col-1 mt-3" %>
    <%= f.file_field :image, class:"offset-1 col-3" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "自己紹介", class:"col-1 mt-3" %>
    <%= f.text_area :introduction, class:"offset-1 col-3" %>
  </div>

  <%= f.submit "編集内容を保存", class: "btn btn-success offset-2 col-2 mt-5" %>
<% end %>
<%= link_to "退会する", root_path, class: "btn btn-danger col-2 offset-2 mt-3 mb-3" %>
