<div class="container d-flex flex-wrap justify-content-center">
  <%= link_to image_tag("logo.png", size: "150x50"), root_path, class: "fs-4 d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" %>

  <ul class="nav nav-pills">
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ルーム一覧", users_rooms_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ルーム作成", new_users_room_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <% if unchecked_notifications.any? %>
                    <i class="fa fa-circle" style="color: #99FFCC;"></i>
                <% end %>
                <%= link_to "通知一覧", users_notifications_path, class: "nav-link" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% elsif admin_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "adminログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "時間指定一覧", admins_time_tags_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "職種一覧", admins_ocuupation_tags_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admins_users_path, class: "nav-link" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% else %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "adminログイン", new_admin_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
  </ul>
</div>

